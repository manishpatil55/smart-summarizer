{
  "version": 2,
  "functions": {
    "api/summarize.js": {
      "runtime": "@vercel/node@18.x"
    },
    "api/analyze.js": {
      "runtime": "@vercel/node@18.x"
    },
    "api/batch.js": {
      "runtime": "@vercel/node@18.x"
    },
    "api/health.js": {
      "runtime": "@vercel/node@18.x"
    },
    "api/docs.js": {
      "runtime": "@vercel/node@18.x"
    }
  },
  "rewrites": [
    { "source": "/api/summarize", "destination": "/api/summarize.js" },
    { "source": "/api/analyze", "destination": "/api/analyze.js" },
    { "source": "/api/batch", "destination": "/api/batch.js" },
    { "source": "/api/health", "destination": "/api/health.js" },
    { "source": "/api/docs", "destination": "/api/docs.js" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
      ]
    }
  ]
}